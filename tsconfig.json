{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": false,
        "noImplicitAny": true,
        "module": "commonjs",
        "lib": ["ES2015"],
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "declaration": false
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}